@using ElectronicJournal_WEB.Models.ViewModel
@model List<SelectedSubjectViewModel>

@{
    ViewData["Title"] = "SelectSubject";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}


<h3>Выберите предмет, по которому хотите посмотреть успеваемость группы</h3>

<table border="1">


        @for (int i = 0; i < Model.Count; i++)
        {
            @using (Html.BeginForm("DetailGroupPerformance", "TeacherHomePage", FormMethod.Post))
            {
                <tr>
                    <td>@Model[i].SubjectName</td>
                    <td style="display:none;">@Html.Hidden("SubjectName", Model[i].SubjectName)</td>
                    <td style="display:none;">@Html.Hidden("SubjectId", Model[i].SubjectId)</td>
                    <td style="display:none;">@Html.Hidden("GroupId", Model[i].GroupId)</td>
                    <td> <input type="submit" value="Выбрать" /></td>
                </tr>
            }
        }
    </table>